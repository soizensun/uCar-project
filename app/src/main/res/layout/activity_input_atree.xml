                android:layout_marginTop="17dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="17dp"
                    android:text="ทางทิศเหนือ"
                    android:textSize="20dp"
